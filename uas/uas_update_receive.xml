<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE scenario SYSTEM "sipp.dtd">

<!-- UAS receive UPDATE -->

<!-- sipp -sf /path/to/uas_update_receive.xml -i LOCAL_IP -p LOCAL_PORT -->

<!-- sipp -sf /usr/src/sipp_scenarios/uas/uas_update_receive.xml -i 192.168.0.15 -p 5069 -->

<scenario name="UAS receive UPDATE">

  <!-- Receive initial INVITE and get details from this request -->
  <recv request="INVITE" crlf="true">
    <action>
      <ereg regexp="\<sip:.*@[0-9\.:]\>" search_in="hdr" header="To" assign_to="UAC_TO_URI"/>
      <ereg regexp=".*" search_in="hdr" header="CSeq" assign_to="UAC_INVITE_CSEQ"/>
    </action>
  </recv>

  <!-- Send a 100 Trying response -->
  <send>
    <![CDATA[
      SIP/2.0 100 Trying
      [last_Via:]
      [last_From:]
      [last_To:]
      [last_Call-ID:]
      [last_CSeq:]
      Contact: [$UAC_TO_URI]
      Content-Length: 0
    ]]>
  </send>

  <!-- Add some delay between messages -->
  <pause milliseconds="50"/>

  <!-- Send Session Progress -->
  <send>
    <![CDATA[
      SIP/2.0 183 Session Progress
      [last_Via:]
      [last_From:]
      [last_To:];tag=[pid]SIPpTag01[call_number]
      [last_Call-ID:]
      [last_CSeq:]
      Contact: [$UAC_TO_URI]
      Content-Type: application/sdp
      Content-Length: [len]

      v=0
      o=user1 53655765 2353687637 IN IP[local_ip_type] [local_ip]
      s=-
      c=IN IP[media_ip_type] [media_ip]
      t=0 0
      m=audio [media_port] RTP/AVP 0
      a=rtpmap:0 PCMU/8000
    ]]>
  </send>

  <!-- Wait for UPDATE -->
  <recv request="UPDATE"
        rtd="true"
        crlf="true">
  </recv>

  <!-- Send 200 to UPDATE -->
  <send retrans="500">
    <![CDATA[
      SIP/2.0 200 OK
      [last_Via:]
      [last_From:]
      [last_To:];tag=[pid]SIPpTag01[call_number]
      [last_Call-ID:]
      [last_CSeq:]
      Contact: [$UAC_TO_URI]
      Content-Type: application/sdp
      Content-Length: [len]

      v=0
      o=user1 53655765 2353687637 IN IP[local_ip_type] [local_ip]
      s=-
      c=IN IP[media_ip_type] [media_ip]
      t=0 0
      m=audio [media_port] RTP/AVP 0
      a=rtpmap:0 PCMU/8000
    ]]>
  </send>

  <!-- Answer initial INVITE -->
  <send retrans="500">
    <![CDATA[
      SIP/2.0 200 OK
      [last_Via:]
      [last_From:]
      [last_To:];tag=[pid]SIPpTag01[call_number]
      [last_Call-ID:]
      CSeq[$UAC_INVITE_CSEQ]
      Contact: [$UAC_TO_URI]
      Content-Type: application/sdp
      Content-Length: [len]

      v=0
      o=user1 53655765 2353687637 IN IP[local_ip_type] [local_ip]
      s=-
      c=IN IP[media_ip_type] [media_ip]
      t=0 0
      m=audio [media_port] RTP/AVP 0
      a=rtpmap:0 PCMU/8000
    ]]>
  </send>

  <!-- We should be getting ACK for our 200 OK -->
  <recv request="ACK"
        rtd="true"
        crlf="true">
  </recv>

  <!-- We should be getting ACK for our 200 OK -->
  <recv request="ACK"
        rtd="true"
        crlf="true">
  </recv>

  <!-- Wait for BYE request -->
  <recv request="BYE">
  </recv>

  <!-- Send a 200 OK response to BYE -->
  <send>
    <![CDATA[
      SIP/2.0 200 OK
      [last_Via:]
      [last_From:]
      [last_To:]
      [last_Call-ID:]
      [last_CSeq:]
      Contact: [$UAC_TO_URI]
      Content-Length: 0
    ]]>
  </send>

  <!-- Keep the call open for a while in case the 200 is lost to be     -->
  <!-- able to retransmit it if we receive the BYE again.               -->
  <timewait milliseconds="4000"/>

  <!-- Definition of the response time repartition table (unit is ms)   -->
  <ResponseTimeRepartition value="10, 20, 30, 40, 50, 100, 150, 200"/>

  <!-- Definition of the call length repartition table (unit is ms)     -->
  <CallLengthRepartition value="10, 50, 100, 500, 1000, 5000, 10000"/>

</scenario>
